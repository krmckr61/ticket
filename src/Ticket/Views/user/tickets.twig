{% include 'user/pieces/userHeader.twig' %}
<div class="container">
    <div class="row">
        <div class="col-xs-6">
            <h2>My Tickets</h2>
        </div>
        <div class="col-xs-6 text-right">
            <a href="/user/tickets/new" class="btn btn-success">New Ticket</a>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Head</th>
            <th>Description</th>
            <th>Categories</th>
            <th>Importance</th>
            <th>Date</th>
            <th>*</th>
        </tr>
        </thead>
        <tbody>
        {% if tickets %}
            {% for ticket in tickets %}
            <tr {% if ticket.status == 3 %} style="background-color:#F7F7CE" {% elseif ticket.status == 2 %} style="background-color:#DAF7CE" {% else %}  style="background-color:#F7CECE" {% endif %}>
                <td>{{ ticket.id }}</td>
                <td>{{ ticket.head }}</td>
                <td>{{ ticket.description }}</td>
                <td>
                    {% for cat in ticket.cats %}
                        {{ cat.name }}
                    {% endfor %}
                </td>
                <td>{{ ticket.importance }}</td>
                <td>{{ ticket.date|date("d.m.Y H:i") }}</td>
                <td><a href="/user/tickets/comments/{{ ticket.id }}" class="btn btn-info">Show Comments</a></td>
            </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="5" align="center">Your tickets not found</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
</div>

{% include 'user/pieces/footer.html' %}