{% include 'admin/pieces/adminHeader.twig' %}

<div class="container">
    <h3>Admin Dashboard</h3>
    <hr>
    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-8">
                    <h4>Categories</h4>
                </div>
                <div class="col-xs-4 text-right">
                    <a href="/admin/tickets" class="btn btn-info">Show Tickets</a>
                </div>
            </div>
            <hr>
                <div class="row">
                    <div class="col-xs-12 text-right">
                        <a href="/admin/categories/new" class="btn btn-success">+ New Category</a>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                        <th>Id</th>
                        <th>Name</th>
                    </thead>
                    <tbody>
                        {% for cat in categories %}
                            <tr>
                                <td>{{ cat.id }}</td>
                                <td>{{ cat.name }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>

